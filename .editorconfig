# EditorConfig (See: http://editorconfig.org)
#

# this is the top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{js,html,css,scss,less,sass,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2

[**/*.{js,html,css,scss,less,sass,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2
